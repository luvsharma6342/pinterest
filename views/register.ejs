<% include ./partials/header.ejs %>
    <div
        class="w-full h-screen bg-[url(https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?w=1000&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8YWJzdHJhY3R8ZW58MHx8MHx8fDA%3D)] bg-no-repeat bg-cover bg-center flex items-center justify-center">
        <div class="w-[30vw] bg-white px-20 py-10 rounded-[30px]">
            <h1 class="text-3xl mb-10 text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">
                Create New Account</h1>
            <form action="/register" method="post">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username"
                    placeholder="username">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullname"
                    placeholder="Full Name">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email"
                    placeholder="email">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact"
                    placeholder="contact">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password"
                    placeholder="password">
                <input class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit"
                    value="Create New Account">
                <p class="text-xs fot-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to
                    Pinterest's Terms of
                    Service and acknowledge you've read our
                    Privacy Policy Notice at collection.</p>
            </form>
            <a class="inline-block mt-7 text-sm font semi-bold text-zinc-700 w-full text-center" href="/">
                Already have an account</a>
        </div>
    </div>
    <% include ./partials/footer.ejs %>